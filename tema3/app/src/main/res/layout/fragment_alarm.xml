<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/todo_title_view"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Todo title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/notification_set_button"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_shape"
        android:textColor="@drawable/text_button_color"
        android:text="Set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toEndOf="@+id/date_picker_button"
        app:layout_constraintTop_toBottomOf="@+id/date_text_view"
        app:layout_constraintVertical_bias="0.058" />

    <Button
        android:id="@+id/time_picker_button"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_shape"
        android:textColor="@drawable/text_button_color"
        android:text="Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_text_view"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:text="Time"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_title_view" />

    <Button
        android:id="@+id/date_picker_button"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/button_shape"
        android:textColor="@drawable/text_button_color"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time_picker_button"
        app:layout_constraintTop_toBottomOf="@+id/time_text_view"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toEndOf="@+id/time_text_view"
        app:layout_constraintTop_toBottomOf="@+id/todo_title_view" />

</androidx.constraintlayout.widget.ConstraintLayout>